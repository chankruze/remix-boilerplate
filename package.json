    "@types/bcrypt": "^5.0.0",
    "@vercel/node": "^2.4.4",
    "bcrypt": "^5.1.0",
    "nprogress": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.6.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.3",
    "@remix-run/eslint-config": "^1.7.3",
    "@remix-run/serve": "^1.7.3",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.12",
    "classnames": "^2.3.2",
    "concurrently": "^7.4.0",
